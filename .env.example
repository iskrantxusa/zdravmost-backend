# =================================
# APPLICATION SETTINGS
# =================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# =================================
# DATABASE CONFIGURATION
# =================================
# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=zdravmost_db
DB_SYNCHRONIZE=true
DB_LOGGING=false

# =================================
# REDIS CONFIGURATION
# =================================
# Redis for caching and sessions
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================
# JWT AUTHENTICATION
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# STRIPE PAYMENT PROCESSING
# =================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=usd

# =================================
# EMAIL CONFIGURATION
# =================================
# SMTP Settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# =================================
# PUSH NOTIFICATIONS
# =================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-firebase-project-id

# =================================
# VIDEO CALLS INTEGRATION
# =================================
# Agora.io settings (для видеозвонков)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# Alternative: Twilio Video settings
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret

# =================================
# FILE STORAGE
# =================================
# AWS S3 for file uploads (медицинские документы, аватары)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=zdravmost-files

# =================================
# LOGGING
# =================================
LOG_LEVEL=info
LOG_FORMAT=combined

# =================================
# CORS SETTINGS
# =================================
CORS_ORIGIN=http://localhost:3000,http://localhost:4200
CORS_CREDENTIALS=true

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# =================================
# MEDICAL DATA ENCRYPTION
# =================================
# Ключ для шифрования медицинских данных
MEDICAL_DATA_ENCRYPTION_KEY=your-32-character-encryption-key

# =================================
# EXTERNAL APIS
# =================================
# Интеграция с медицинскими сервисами
MEDICAL_API_KEY=your-medical-api-key
MEDICAL_API_URL=https://api.medical-service.com

# =================================
# APPOINTMENT SETTINGS
# =================================
DEFAULT_APPOINTMENT_DURATION=30
MAX_APPOINTMENTS_PER_DAY=20
APPOINTMENT_BUFFER_TIME=15

# =================================
# NOTIFICATION SETTINGS
# =================================
APPOINTMENT_REMINDER_HOURS=24,2
SMS_SERVICE_API_KEY=your-sms-service-key
SMS_SERVICE_URL=https://api.sms-service.com
